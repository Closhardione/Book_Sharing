<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_blank">

    <fragment
        android:id="@+id/nav_blank"
        android:name="com.example.booksharing.ui.BlankFragment"
        tools:layout="@layout/fragment_blank"/>
    <fragment
        android:id="@+id/nav_account"
        android:name="com.example.booksharing.ui.account.AccountFragment"
        android:label="@string/menu_account"
        tools:layout="@layout/fragment_account" />

    <fragment
        android:id="@+id/nav_library"
        android:name="com.example.booksharing.ui.library.LibraryFragment"
        android:label="@string/menu_library"
        tools:layout="@layout/fragment_library" />

    <fragment
        android:id="@+id/nav_search"
        android:name="com.example.booksharing.ui.search.SearchFragment"
        android:label="@string/menu_search"
        tools:layout="@layout/fragment_search" />
</navigation>